<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.cmms.ui.StudentDetailController" 
      spacing="10.0" style="-fx-padding: 15;">

    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>

    <HBox spacing="10">
        <Label text="Name:" style="-fx-font-weight: bold;"/>
        <Label fx:id="studentNameLabel" text="-"/>
    </HBox>
    
    <HBox spacing="10">
         <Label text="Roll No:" style="-fx-font-weight: bold;"/>
         <Label fx:id="rollNoLabel" text="-"/>
     </HBox>
     
    <HBox spacing="10">
         <Label text="Class/Batch:" style="-fx-font-weight: bold;"/>
         <Label fx:id="classLabel" text="-"/>
    </HBox>
    
     <HBox spacing="10">
         <Label text="Student ID:" style="-fx-font-weight: bold;"/>
         <Label fx:id="studentIdLabel" text="-" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
     </HBox>

    <Label text="Logs:" style="-fx-font-weight: bold; margin-top: 10px;"/>
    <ListView fx:id="logListView" VBox.vgrow="ALWAYS" prefHeight="300.0"/>

</VBox> 